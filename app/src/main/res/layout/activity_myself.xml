<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_homepage_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="个人中心"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:layout_marginLeft="0dp"
        android:background="#94A7F3"/>
    <TextView
        android:id="@+id/tv_homepage_02"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="0dp"
        android:background="@drawable/headportrait"
        android:layout_below="@+id/tv_homepage_01"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/tv_homepage_03"
        android:layout_toRightOf="@+id/tv_homepage_02"
        android:layout_below="@+id/tv_homepage_01"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="80dp"
        android:text="用户："
        android:textSize="24sp"
        android:layout_marginLeft="0dp" />
    <View
        android:id="@+id/v_like"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/tv_homepage_02"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="100dp"
        android:background="@drawable/like"/>
    <Button
        android:id="@+id/btn_like"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@id/v_like"
        android:layout_marginLeft="125dp"
        android:text="点击查看我喜欢"
        android:textSize="18sp"
        android:background="@drawable/bg_btn2"/>
    <Button
        android:id="@+id/btn_exit"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_homepage_01"
        android:layout_alignParentRight="true"
        android:background="@drawable/bg_btn7"
        android:text="退出"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/btn_homepage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/homepage"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="80dp"/>
    <Button
        android:id="@+id/btn_myself"
        android:layout_width="80dp"
        android:layout_height="75dp"
        android:background="@drawable/my"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="260dp"/>
</RelativeLayout>